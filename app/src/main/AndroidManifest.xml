<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beever">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/beever_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/beever_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Beever">
        <activity android:name=".navigation.NavigationDrawer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".admin.Registration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".admin.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".admin.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".admin.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>