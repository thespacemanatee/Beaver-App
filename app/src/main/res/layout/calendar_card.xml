<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_corners_nav"
    android:backgroundTint="@color/beever_pink"
    android:padding="16dp">

    <TextView
        android:id="@+id/event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25 May"
            android:textSize="16sp"
            android:paddingEnd="8dp"/>
        <TextView
            android:id="@+id/start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2:30PM"
            android:paddingEnd="8dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="-"
            />

        <TextView
            android:id="@+id/end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2:30PM"
            android:textSize="16sp"
            android:paddingStart="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/event_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/start_date_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25 May"
            android:textSize="16sp"
            android:paddingEnd="8dp"/>
        <TextView
            android:id="@+id/start_time_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2:30PM"
            android:paddingEnd="8dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="-"
            />

        <TextView
            android:id="@+id/end_date_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25 May"
            android:textSize="16sp"
            android:paddingStart="8dp"/>
        <TextView
            android:id="@+id/end_time_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2:30PM"
            android:textSize="16sp"
            android:paddingStart="8dp"/>

    </LinearLayout>

</LinearLayout>