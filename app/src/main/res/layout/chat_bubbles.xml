<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearance="@style/roundedImageViewRounded"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/chat_member_img"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:foreground="@drawable/my_selector"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/chat_member_img"
        android:background="@drawable/rounded_corners_nav"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bubble_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/beever_blue"/>

        <TextView
            android:id="@+id/bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/bubble_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAlignment="textEnd"/>

    </LinearLayout>

</RelativeLayout>