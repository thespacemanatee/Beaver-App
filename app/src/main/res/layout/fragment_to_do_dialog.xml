<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a To-Do"
        android:fontFamily="@font/poppins"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/beever_pink"
        android:background="@color/beever_light_blue_transparent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toDoDialogTask"
        android:hint="Task"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/beever_blue"
        android:fontFamily="@font/poppins"
        android:textSize="16sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toDoDialogAssignTo"
        android:hint="Assign to"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/beever_blue"
        android:fontFamily="@font/poppins"
        android:textSize="16sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toDoDialogDate"
        android:hint="Add Due Date"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/beever_blue"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>