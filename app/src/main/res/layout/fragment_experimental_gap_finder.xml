<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".feature.ExperimentalGapFinderFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        tools:context=".feature.ExperimentalGapFinderFragment">
    <!-- TODO: Update blank fragment layout -->
        <EditText
            android:id="@+id/edittext_experimental_user_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text=""
            android:hint="User id"/>

        <Button
            android:id="@+id/button_experimental_user_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Query" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        tools:context=".feature.ExperimentalGapFinderFragment">
        <!-- TODO: Update blank fragment layout -->
        <EditText
            android:id="@+id/edittext_experimental_group_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text=""
            android:hint="Group id"/>

        <Button
            android:id="@+id/button_experimental_group_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Query" />

    </LinearLayout>

    <TextView
        android:id="@+id/textview_experimental_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Info shown here" />
</LinearLayout>